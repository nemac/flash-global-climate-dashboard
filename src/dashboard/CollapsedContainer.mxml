<!--- The default skin class for the Spark Button component.  

       @see spark.components.Button
        
      @langversion 3.0
      @playerversion Flash 10
      @playerversion AIR 1.5
      @productversion Flex 4
-->
<s:SkinnableContainer xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" 
             xmlns:fb="http://ns.adobe.com/flashbuilder/2009" minWidth="21" minHeight="21" 
			 alpha.disabled="0.5" xmlns:mx="library://ns.adobe.com/flex/mx"
			 mouseDown="mouseDownHandler(event)"
			 mouseUp="mouseUpHandler(event)"
			 mouseOver="mouseOverHandler(event)"
			 mouseOut="mouseUpHandler(event)">
    
    <!-- host component -->
    <fx:Metadata>
        <![CDATA[ 
        /** 
         * @copy spark.skins.spark.ApplicationSkin#hostComponent
         */
        
        ]]>
    </fx:Metadata>
    
    <fx:Script>
        <![CDATA[         
			import flashx.textLayout.elements.TextFlow;
			
            [Bindable]
			public var textFlow:TextFlow = null;


			protected function mouseDownHandler(event:MouseEvent):void
			{
				currentState = "down";
			}


			protected function mouseUpHandler(event:MouseEvent):void
			{
				currentState = "up";
			}


			protected function mouseOverHandler(event:MouseEvent):void
			{
				currentState = "over";
			}

        ]]>        
    </fx:Script>
    
    <!-- states -->
    <s:states>
        <s:State name="up" />
        <s:State name="over" />
        <s:State name="down" />
        <s:State name="disabled" />
    </s:states>
    

	<s:BorderContainer id="container" 
					   borderVisible="true"
					   width="400" height="20" left="15" top="3"
					   backgroundColor.over="#cc9933"
					   backgroundColor.down="#cc9933"
					   backgroundColor="#1d2a3c" cornerRadius="5">
		
		<s:RichEditableText editable="false" focusEnabled="false" selectable="false"
							textFlow="{textFlow}" color="0xFFFFFF"
							textAlign="left" fontWeight="bold"
							verticalAlign="middle"
							left="25" right="10" verticalCenter="1"/>
	</s:BorderContainer>
	
	<s:BorderContainer borderVisible="false" backgroundColor.over="#cc9933" backgroundColor="#555f6d" 
					   backgroundColor.down="#cc9933" width="20" height="20" y="2" x="0" left="0" cornerRadius="5">
		<mx:Image id="icon" source="assets/move_icon.png" left="-3" top="-3"/>
	</s:BorderContainer>
</s:SkinnableContainer>
